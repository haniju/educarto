#  #création du fichier de stat.
fileS = open("wordStat.csv", "w")
fileSW = csv.writer(fileS)
fileSW.writerow(["Mot", "Nb occurences", "Nb Co-occurences"])
for word in set(finalWordList):
    fileSW.writerow([word, ocL[word], co_ocL[word]])
fileS.close()
